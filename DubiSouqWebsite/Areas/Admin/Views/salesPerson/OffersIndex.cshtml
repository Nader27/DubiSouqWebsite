@model IEnumerable<DubiSouqWebsite.Models.product>

@{
    ViewBag.Title = "Offers";
}

<h2>Offers</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Post_Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_type.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.user.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Post_Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_type.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user.Name)
        </td>
        <td>
            @Html.ActionLink("Change State", "ChangeStatus", new { id=item.ID })
        </td>
    </tr>
}

</table>

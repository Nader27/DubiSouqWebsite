                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    @{
                        user ADMIN = Session["admin"] as user;
                    }
                    <li>
                        <a href="@Url.Action("ChangeMyPicture","Admin")"><img src="~/@ADMIN.Picture" width="100" height="100" /></a>
                    </li>
                    <li>
                        <a href="@Url.Action("EditMyUser","Admin")"><i class="fa fa-user fa-fw"></i> User Profile</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
                    </li>
                    <li class="divider"></li>
                    @using (Html.BeginForm("Logout", "User", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
                    {
                        <li class="navbar-brand"><a style="text-decoration:none" href="javascript:document.getElementById('logoutForm').submit()">Logout</a></li>
                    }
                </ul>
                <!-- /.dropdown-user -->
            </li>
            <!-- /.dropdown -->
        </ul>
        <!-- /.navbar-top-links -->
        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-menu">
                    <li class="sidebar-search">
                        <div class="input-group custom-search-form">
                            <form method="get" id="searchform">
                                <input type="text" class="form-control" placeholder="Search..." name="search">
                            </form>
                            <span class="input-group-btn">
                                <button class="btn btn-default" onclick="javascript: document.getElementById('searchform').submit()" type="button">
                                    <i class="fa fa-search"></i>
                                </button>
                            </span>
                        </div>
                        <!-- /input-group -->
                    </li>
                    @if (ADMIN.Type_id == 2)
                    {
                        <li>
                            <a href=" @Url.Action("Dashboard") "><i class=" fa fa-dashboard fa-fw"></i> Dashboard</a>
                        </li>
                    }
                    @if (ADMIN.Type_id == 6)
                    {
                        <li>
                            <a href="@Url.Action("ProductsIndex")"><i class="fa fa-dollar fa-fw"></i> Products<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("AddProduct")">Add Product</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("ProductsIndex")">View Products</a>
                                </li>
                            </ul>
                        </li>
                    }
                    @if (ADMIN.Type_id == 5)
                    {
                        <li>
                            <a href=" @Url.Action("UserIndex") "><i class=" fa fa-user fa-fw"></i> User</a>
                        </li>
                    }
                    @if (ADMIN.Type_id == 5)
                    {
                        <li>
                            <a href=" @Url.Action("ViewReport") "><i class=" fa fa-list-alt fa-fw"></i> Reports</a>
                        </li>
                    }
                    @if (ADMIN.Type_id == 3)
                    {

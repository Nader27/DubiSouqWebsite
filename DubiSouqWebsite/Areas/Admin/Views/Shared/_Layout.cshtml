                            <a href=" @Url.Action("ViewReport") "><i class=" fa fa-list-alt fa-fw"></i> Reports</a>
                        </li>
                    }
                    @if (ADMIN.Type_id == 4)
                    {
                        <li>
                            <a href="@Url.Action("ProductsIndex")"><i class="fa fa-dollar fa-fw"></i> Products</a>
                        </li>
                    }
